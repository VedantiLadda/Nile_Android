<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vedantiladda.ecommerce">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Login Page"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginAndSignup.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginAndSignup.SignupActivity"
            android:label="Signup Page" />
        <activity
            android:name=".CredentialsActivity"
            android:label="Credentials" />
        <activity android:name=".LogoutAndEditProfile.LogoutActivity"
            android:label="User Page"></activity>
        <activity android:name=".LogoutAndEditProfile.EditProfileActivity"
            android:label="Edit Profile"></activity>
        <activity android:name=".LaunchActivty"></activity>
    </application>

</manifest>